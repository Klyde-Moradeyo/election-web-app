<!-- Title -->
<div class="pagetitle">
     <div class="card-body" style="background-color: #6A87A5;text-align: center;padding: 0 0px 0px 0px;">
        <strong><h1 class="card-title" style="color:#fff;">Voters (<%= @ballot.voters.count %>)</h1></strong>
     </div>
</div>
<!-- Title END -->
<section class="section dashboard">
   <div class="row">
      <!-- Left side columns -->
      <div class="col-lg-12">
            <div class="table-responsive text-nowrap">
               <!--Table-->
               <table class="table table-striped">
                  <thead>
                     <tr>
                      <th scope="col">Email</th>
                      <th scope="col">Username</th>
                      <th scope="col">Password</th>
                      <th scope="col">Voted?</th>
                     </tr>
                  </thead>
                  <tbody>
                    <% @voters.each do |voter| %>
                     <tr>
                      <td><%= voter.email %></td>
                      <td><%= voter.username %></td>
                      <td><%= voter.password %></td>
                      <td><%= has_voter_voted(@ballot, voter) %></td>
                     </tr>
                     <% end %>
                     </tr>
                  </tbody>
               </table>
               <!-- End Table with stripped rows -->
            </div>
         </div>
      </div>
   </div>
</section>