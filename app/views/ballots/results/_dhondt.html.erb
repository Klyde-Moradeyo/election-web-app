<% results = calculate_results(@ballot, question) %>
<% arr = Array.new %>
<div class="card">
    <div class="card-body">
         <br>
         <h4 style="text-align: center"><b><%= question.title %></b></h4>
         <p style="text-align: center"><%= question.description %></p>
         <div class="row">
            <!-- Left side columns -->
            <div class="col-lg-12">
                  <div class="table-responsive text-nowrap">
                     <!--Table-->
                     <table class="table table-striped" style="text-align: center;">
                        <thead>
                           <tr>
                           <th scope="col">Option</th>
                           <th scope="col">Seats Won</th>
                           </tr>
                        </thead>
                        <tbody>
                     <% if results.any? %>
                        <% results.each do |option| %>
                              <tr>
                                 <td><%= Option.find_by(id: option[0]).title %></td>
                                 <td><%= option[1] %></td>
                                 <% arr.push option[1] %>
                              </tr>
                           <% end %>
                     <% else %>
                        <tr>
                           <td> - </td>
                           <td> - </td>
                     </tr>
                     <% end %>
                     <tr style="border-top: 1px blue">
                        <th>Total Seats</th>
                        <td><b><%=arr.sum%><b></td>
                     </tr>
                     </tbody>
                     </table>
                     <!-- End Table with stripped rows -->
                  </div>
               </div>
            </div>
         </div>
      </div>