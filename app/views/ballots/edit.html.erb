<h1>Editing ballot</h1>

<%= render "form", ballot: @ballot, url: user_ballot_path(current_user, @ballot) %>

<br>

<div>
  <%= link_to "Show this ballot", user_ballot_path(current_user.id, @ballot) %> |
  <%= link_to "Back to ballots", user_ballots_path %>
  <%= button_to "Destroy this ballot", user_ballot_path(current_user, @ballot), method: :delete,  :class => "btn btn-primary", :style => "background-color: #d41515;border-color:#c70000;", method: :delete,  data: {confirm: "Delete #{@ballot.title}?"} %>
</div>
