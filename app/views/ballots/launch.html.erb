<div id="<%= dom_id @ballot %>">
<table class="table">
  <thead>
    <tr>
      <th scope="col">Ballot Details:</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row">Title</th>
      <td><%= @ballot.title %></td>
    <tr>
      <th scope="row">Description</th>
      <td><%= @ballot.description %></td>
    </tr>
    <tr>
      <th scope="row">Ballot Pin</th>
      <td><%= @ballot.access_token %></td>
    </tr>
    <tr>
      <th scope="row">Start Date</th>
      <td><%= @ballot.start_date %></td>
    </tr>
    <tr>
      <th scope="row">End Date</th>
      <td><%= @ballot.end_date %></td>
    </tr>
    <tr>
      <th scope="row">Show Voter Results</th>
      <td><%= @ballot.show_voter_results %></td>
    </tr>
    <tr>
      <th scope="row">No. of Questions</th>
      <td><%= @ballot.questions.count %></td>
    </tr>
    <tr>
      <th scope="row">Expected Voter Turnout</th>
      <td><%= @ballot.voters.count %></td>
    </tr>
  </tbody>
</table>
</div>
<%= link_to "Back to Ballot", user_ballot_path(current_user, @ballot) %> |
<%= link_to "Schedule Ballot"%> |
<%= link_to "Launch Ballot"%> 