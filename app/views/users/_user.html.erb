<div id="<%= dom_id user %>">
  <p>
    <strong>First name:</strong>
    <%= user.first_name %>
  </p>

  <p>
    <strong>Last name:</strong>
    <%= user.last_name %>
  </p>

  <p>
    <strong>Role:</strong>
    <%= user.roles.pluck(:name) %>
  </p>
  

  <p>
    <strong>Email:</strong>
    <%= user.email %>
  </p>

  <p>
    <strong>Last login:</strong>
    <%= user.last_login %>
  </p>

  <p>
    <strong>User Ballot:</strong>
    <%= user.hosted_ballots.pluck(:id) %>
  </p>

  <p>
    <strong>User Voter's Ballot:</strong>
    <%= user.voter_ballots.pluck(:id) %>
  </p>

</div>
