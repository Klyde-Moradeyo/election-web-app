<!-- ======= Header ======= -->
<header id="header" class="header fixed-top d-flex align-items-center" style="position: relative">

  <div class="d-flex align-items-center justify-content-between">
    <i class="bi bi-list toggle-sidebar-btn"></i>
  </div>
  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

  <!-- Middle Text -->
  <div class="logo d-flex align-items-center" style="">
    <%= link_to ('<span class=" d-lg-block">E.S.A</span>').html_safe, root_path  %>
  </div>
  <!-- Middle Text End -->

  <nav class="header-nav ms-auto">
    <ul class="d-flex align-items-center">

      <li class="nav-item d-block d-lg-none">
        <a class="nav-link nav-icon search-bar-toggle " href="#">
          <i class="bi bi-search"></i>
        </a>
      </li>

      <li class="nav-item dropdown pe-3">

        <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
          <span class="d-none d-md-block dropdown-toggle ps-2">
          <%if session[:voter] %>
            <%= session[:voter]["username"] %>
          <% else %>
            <%= [current_user&.first_name[0], ".", current_user&.last_name].select(&:present?).join(" ").titleize %>
          <% end %>
          </span>
        </a>

        <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
          <li class="dropdown-header">
            <h6><%= [current_user&.first_name, current_user&.last_name].select(&:present?).join(" ").titleize %></h6>
          </li>
          <li>
            <hr class="dropdown-divider">
          </li>

          <li>
            <a class="dropdown-item d-flex align-items-center" href="#__YOU_GET__NO__HELP__MUHAHHAHAHAHA!!!!">
              <i class="bi bi-question-circle"></i>
              <span>Need Help?</span>
            </a>
          </li>
          <li>
            <hr class="dropdown-divider">
          </li>

          <li>
          <% if session[:voter] %>
            <% ballot = Ballot.find_by(id: session[:voter]["ballot_id"])%>
            <%= link_to user_ballot_voter_sign_out_path(ballot.user_id, ballot.id), class: "dropdown-item d-flex align-items-center" do %>
              <i class="bi bi-box-arrow-right"></i>
              <span>Sign Out</span>
              <% end %>
          <% else %>
            <%= link_to destroy_user_session_path, class: "dropdown-item d-flex align-items-center" do %>
              <i class="bi bi-box-arrow-right"></i>
              <span>Sign Out</span>
              <% end %>
          <% end %>
            </a>
          </li>

        </ul>
      </li>

    </ul>
  </nav>

</header>